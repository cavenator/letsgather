<form>
<div class="row-fluid">
	<div class="span6 offset3">
		<h3>Apply for event:</h3>
		<%= select_tag(:event_id, options_for_select(@user.events.map{ |event| [event.name, event.id]} | [['For future events',0]])) %>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<h3>Notifications</h3>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<table style="border-spacing: 5px;border-collapse: separate;">
			<thead>
				<th />
				<th />
			</thead>
			<tbody>
				<tr>
					<td style="vertical-align:baseline"><input type="checkbox" id="check_notify_attending_guests" name="settings[notify_on_guest_accept]" value="1" /></td><td><label>Notify me when guests accept</label></td>
				</tr>
				<tr>
					<td style="vertical-align:baseline"><input type="checkbox" id="check_notify_declining_guests" name="settings[notify_on_guest_decline]" value="1" /></td><td><label>Notify me when guests decline</label></td>
				</tr>
				<tr>
					<td style="vertical-align:baseline"><input type="checkbox" id="check_notify_all_guests" name="settings[notify_on_guest_response]" value="1" /></td><td><label>Notify me off all guest rsvp responses</label></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<h3>Reminders</h3>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<table style="border-spacing: 5px;border-collapse: separate;">
			<thead>
				<th />
			</thead>
			<tbody>
				<tr>
					<td style="vertical-align:baseline"><label>Send out rsvp reminders <input style="width:1.25em" type="text" id="rsvp_advance" name="settings[days_rsvp_reminders]" value=0 maxlength="2"/> days from rsvp date</label></td>
				</tr>
				<tr>
					<td style="vertical-align:baseline"><label>Send out event reminders <input style="width:1.25em" type="text" id="event_advance" name="settings[days_event_reminders]" value=0 size="2" maxlength="2"/> days from event date</label></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<button id="submit" class="btn btn-success">Save</button>
	</div>
</div>
</form>
<div class="row-fluid">
	<div class="span6 offset3">
		<label style="font-size:0.5em"> *These changes only take effect when you create events </label>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		var settings_hash = {};

		$.getJSON(window.location.pathname, function(data){
			$.each(data, function(index, setting){
				settings_hash[setting.event_id] = setting;
			});
			settings_hash[0] = 0;
		});

		$("#event_id").change(function(){
			//Update per settings
			alert(settings_hash[$(this).val()]);
		});

		$("#submit").click(function(){
			var settings_id = settings_hash[$("#event_id").val()].id;
			var formString = $("form").serialize();
			console.log(formString);
			$.ajax({
				url: window.location.pathname +"/"+settings_id,
				dataType: "html",
				async: false,
				data: formString,
				type: 'PUT',
				success: function(){
					alert("success");
				},
				error: function(){
					alert("error");
				}
			});
			return false;
		});
	});
</script>

		<% if event.potluck_items.count > 0 %>
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>Category</th>
						<th># of items guests are bringing</th>
						<th># of items you requested</th>
					</tr>
				</thead>
				<tbody>
			<% event.potluck_items.each do |item| %>
				<tr>
					<td><span class="label"><%= item.category %></span></td>
					<td style="text-align:center"><%= event.find_attendee_dish_count(item.category) %></td>
					<td style="text-align:center"><%= item.host_quantity %></td>
				</tr>
			<% end %>
			</tbody>
			</table>
		<% else %>
			<div><span class="label label-info">Currently you have no list categories created</span></div>
		<% end %>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>¬
	<% if @event.start_date.blank? %>
		<%= f.label(:start_date, "Start Date (format: YYYY-MM-DD HH:MM -0700):") %>
▸ 	<%= f.text_field :start_date, :id => "start_date" %>
	<% else %>
		<%= f.label(:start_date, "Start Date (format: YYYY-MM-DD HH:MM -0700):") %>
		<input type="text" id="start_date" name="event[start_date]" value="<%= @event.start_date.in_time_zone('Pacific Time (US & Canada)').strftime('%Y-%m-%d %H:%M %z') %>" />
	<% end %>
</p>
<p>
	<% if @event.rsvp_date.blank? %>
		<%= f.label(:rsvp_date, "RSVP Date (format: YYYY-MM-DD HH:MM -0700:") %>
		<%= f.text_field :rsvp_date, :id => "rsvp_date" %>
	<% else %>
		<%= f.label(:rsvp_date, "RSVP Date (format: YYYY-MM-DD HH:MM -0700:") %>
		<input type="text" id="rsvp_date" name="event[rsvp_date]" value="<%= @event.rsvp_date.in_time_zone('Pacific Time (US & Canada)').strftime('%Y-%m-%d %H:%M %z') %>" />
	<% end %>
</p>
  <div class="actions">
		<button class="btn btn-primary" id="event_submit">Save</button>
  </div>
<% end %>

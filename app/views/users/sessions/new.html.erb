<h2>Sign in</h2>

<% if flash[:notice] %>
		<div class="alert alert-error"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
		<div class="alert alert-error"><%= flash[:alert] %></div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class=> "form-horizontal") do |f| %>
  <div class="control-group"><%= f.label :email %>
		<div class="controls">
  <%= f.email_field :email %></div>
</div>

  <div class="control-group"><%= f.label :password %>
	<div class="controls">
  <%= f.password_field :password %></div></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %><%= f.label :remember_me, :class=>"checkbox" %></div>
  <% end -%>

  <div class="control-group">
		<div class="controls"><%= f.submit "Sign in", :class =>"btn btn-primary" %></div></div>
<% end %>

<%= render "users/shared/links" %>
